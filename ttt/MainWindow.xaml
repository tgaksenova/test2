        <Frame Content="" Name="MainFrame" Height="329" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="792"/>
        <Button Content="Назад" Background="Beige" ToolTip="Кликните для возврата на предыдущую страницу" HorizontalAlignment="Left" 
